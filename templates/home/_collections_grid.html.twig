<section class="mb-16">
    <h2 class="text-2xl font-bold text-gray-700 mb-4">Collections</h2>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        {% for collection in collections %}
            <a href="{{ path('app_search', {'collection_ids[]': collection.id}) }}" class="block p-6 bg-white rounded-lg shadow-sm hover:shadow-lg">
                <h3 class="font-semibold text-gray-800">{{ collection.name }}</h3>
                <p class="text-sm text-gray-500">{{ collection.year }}</p>
            </a>
        {% endfor %}
    </div>
</section>
