<div class="bg-white rounded-lg shadow-sm">
    <button type="button" data-action="click->accordion#toggle" data-target="category-content" class="w-full flex justify-between items-center p-4 text-left font-semibold text-gray-800 hover:bg-gray-50">
        <span class="text-2xl font-bold text-gray-700">Browse by Category</span>
        <svg class="h-5 w-5 text-gray-500 transform transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
    </button>
    <div id="category-content" class="hidden p-4 border-t border-gray-200">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
            {% for category in categories %}
                <a data-turbo="false" href="{{ path('app_search', {'category_id': category.id}) }}" class="block p-6 bg-gray-50 rounded-lg hover:bg-gray-100">
                    <div class="flex items-center">
                        <div class="bg-violet-100 p-3 rounded-full">
                            {# Placeholder Icon SVG #}
                            <svg class="h-6 w-6 text-violet-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"></path>
                            </svg>
                        </div>
                        <h3 class="ml-4 text-lg font-semibold text-gray-800">{{ category.name }}</h3>
                    </div>
                </a>
            {% endfor %}
        </div>
    </div>
</div>
