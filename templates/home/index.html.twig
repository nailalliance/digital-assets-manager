{% extends 'base.html.twig' %}

{% block title %}Dashboard | {{ parent() }}{% endblock %}

{% block body %}
    {# Search Section #}
    <section class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-800 mb-4">Find Your Assets</h1>
        <p class="text-lg text-gray-600 mb-6 max-w-2xl mx-auto">Search by name, item code, or tags to quickly find the content you need.</p>
        <div class="max-w-3xl mx-auto">
            <form data-turbo="false" action="{{ path('app_search') }}" method="get">
                <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd"></path></svg>
                    </div>
                    <input type="search" name="q" class="w-full p-4 pl-10 text-lg border-2 border-gray-300 rounded-full focus:ring-violet-500 focus:border-violet-500" placeholder="e.g., Summer Logo, P-12345, social media...">
                    {% if selectedBrand and selectedBrand.id %}
                        <input type="hidden" name="brand_ids[]" value="{{ selectedBrand.id }}">
                    {% endif %}
                </div>
            </form>
        </div>
    </section>

    {# Browse by Brand Section - Now uses links instead of buttons #}
    <section class="mb-16">
        <h2 class="text-2xl font-bold text-gray-700 mb-4 text-center">Browse by Brand</h2>
        <div class="flex items-center justify-center flex-wrap gap-4">
            {% for brand in parentBrands %}
                <a data-turbo="false" href="{{ path('app_home_brand', {id: brand.id}) }}"
                   class="px-6 py-2 font-semibold rounded-full shadow-sm border transition-colors
                          {{ selectedBrand and selectedBrand.id == brand.id
                   ? 'bg-violet-600 text-white border-transparent'
                   : 'bg-white text-gray-700 border-gray-200 hover:bg-gray-100' }}">
                    {{ brand.name }}
                </a>
            {% endfor %}
        </div>
    </section>

    {# This entire block only renders if a brand is selected #}
    {% if selectedBrand %}
        {# Recent Assets for the selected brand #}
        {% if recentAssets is not empty %}
            <section class="mb-12">
                {% include 'home/_recent_assets.html.twig' with {recentAssets} %}
            </section>
        {% endif %}

        {# Sub-brands of the selected parent #}
        {% if childBrands is not empty %}
            <section class="mb-12">
                {% include 'home/_brands_grid.html.twig' with {brands: childBrands} %}
            </section>
        {% endif %}

        {# Categories for the selected brand #}
        {% if categories is not empty %}
            <section class="mb-12">
                {% include 'home/_categories_grid.html.twig' with {categories}  %}
            </section>
        {% endif %}

        {# Collections for the selected brand #}
        {% if collections is not empty %}
            <section class="mb-12">
                {% include 'home/_collections_grid.html.twig' with {collections} %}
            </section>
        {% endif %}

        {# Sub-brands of the selected parent #}
        {# {% if childBrands is not empty %}#}
        {#     <section class="mb-12">#}
        {#         {% include 'home/_brands_grid.html.twig' with {brands: childBrands} %}#}
        {#     </section>#}
        {# {% endif %}#}

    {% else %}
        <div class="text-center py-12 text-gray-500">
            <p>Please select a brand above to start browsing.</p>
        </div>
    {% endif %}

    {# Dynamic Content Sections #}
    {# <div data-home-dashboard-target="recentAssetsContainer"> #}
    {#      #}{# This will be populated by the controller #}
    {# </div> #}
    {# <div data-home-dashboard-target="categoriesContainer"> #}
    {#      #}{# This will be populated by the controller #}
    {# </div> #}
    {# <div data-home-dashboard-target="collectionsContainer"> #}
