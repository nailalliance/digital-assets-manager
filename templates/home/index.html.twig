{% extends 'base.html.twig' %}

{% block title %}Dashboard | {{ parent() }}{% endblock %}

{% block body %}
    {# Search Section #}
    <section class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-800 mb-4">Find Your Assets</h1>
        <p class="text-lg text-gray-600 mb-6 max-w-2xl mx-auto">Search by name, item code, or tags to quickly find the content you need.</p>
        <div class="max-w-3xl mx-auto">
            <form action="{{ path('app_search') }}" method="get">
                <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd"></path></svg>
                    </div>
                    <input type="search" name="q" class="w-full p-4 pl-10 text-lg border-2 border-gray-300 rounded-full focus:ring-violet-500 focus:border-violet-500" placeholder="e.g., Summer Logo, P-12345, social media...">
                </div>
            </form>
        </div>
    </section>

    {# Recent Assets Section #}
    <section class="mb-12">
        <h2 class="text-2xl font-bold text-gray-700 mb-4">Recent Assets</h2>

        {#
        CSS Carousel Container:
        - `grid`: Enables CSS Grid.
        - `grid-flow-col`: Lays out items in a single horizontal row.
        - `auto-cols-[...]:` Sets the width of each column. Here, it's responsive.
        - `overflow-x-auto`: Enables horizontal scrolling.
        - `snap-x` & `snap-mandatory`: Enables scroll snapping.
        - `gap-6`: Adds space between items.
        #}
        <div class="grid grid-flow-col auto-cols-[60%] sm:auto-cols-[40%] md:auto-cols-[30%] lg:auto-cols-[20%] overflow-x-auto snap-x snap-mandatory gap-6 pb-4">
            {# Loop over the assets passed from your controller #}
            {% for asset in recentAssets %}
                <div class="snap-start"> {# Each item snaps to the start of the container #}
                    <a href="{{ path('app_asset', {id: asset.id}) }}" class="block group">
                        <div class="aspect-square bg-white rounded-lg shadow-sm overflow-hidden transform group-hover:-translate-y-1 transition-transform duration-300">
                            {% if asset.thumbnailPath %}
                                <img src="{{ path('asset_thumbnail', {filename: asset.thumbnailPath|basename}) }}" alt="{{ asset.name }}" class="w-full h-full object-cover">
                            {% else %}
                                <div class="w-full h-full bg-gray-200 flex items-center justify-center">
                                    <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14"></path></svg>
                                </div>
                            {% endif %}
                        </div>
                        <p class="mt-2 text-sm font-medium text-gray-800 truncate">{{ asset.name }}</p>
                    </a>
                </div>
            {% endfor %}
        </div>
    </section>

    {# Main Filtering Section - Connects to our Stimulus controller #}
    <div data-controller="home-filter">
        {# Browse by Brand Section - Now an accordion #}
        <section class="mb-16" data-controller="accordion">
            <h2 class="text-2xl font-bold text-gray-700 mb-4">Browse by Brand</h2>
            <div class="space-y-2" data-home-filter-target="brandContainer">
                {% for parent in parentBrands|sort((a, b) => a.name <=> b.name) %}
                    <div class="bg-white rounded-lg shadow-sm">
                        {# This button triggers the filter action in our Stimulus controller #}
                        <button type="button"
                                data-action="click->accordion#toggle click->home-filter#filter"
                                data-target="brand-children-{{ parent.id }}"
                                data-brand-id="{{ parent.id }}"
                                class="w-full flex justify-between items-center p-4 text-left font-semibold text-gray-800 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-violet-500">
                            <span>{{ parent.name }}</span>
                            <svg class="h-5 w-5 text-gray-500 transform transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
                        </button>
                        {# Container for sub-brands, hidden by default #}
                        <div id="brand-children-{{ parent.id }}" class="hidden p-4 border-t border-gray-200">
                            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                                {% if childBrands[parent.id] is defined %}
                                    {% for child in childBrands[parent.id]|sort((a, b) => a.name <=> b.name) %}
                                        <a href="{{ path('app_search', {'brand_ids[]': child.id}) }}" class="text-violet-600 hover:underline">{{ child.name }}</a>
                                    {% endfor %}
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </section>

        {# Container for dynamically loaded collections #}
        <section class="mb-16"  data-home-filter-target="collectionContainer" data-controller="accordion">
            <div class="bg-white rounded-lg shadow-sm">
                <button type="button" data-action="click->accordion#toggle" data-target="collection-content" class="w-full flex justify-between items-center p-4 text-left font-semibold text-gray-800 hover:bg-gray-50">
                    <span class="text-2xl font-bold text-gray-700">Recent Collections</span>
                    <svg class="h-5 w-5 text-gray-500 transform transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
                </button>
                <div id="collection-content" class="hidden p-4 border-t border-gray-200">
                    <div class="grid grid-flow-col auto-cols-[80%] sm:auto-cols-[45%] md:auto-cols-[30%] overflow-x-auto snap-x snap-mandatory gap-6 pb-4">
                    </div>
                </div>
            </div>
        </section>

        {# Container for dynamically loaded categories #}
        <section class="mb-16" data-home-filter-target="categoryContainer" data-controller="accordion">
            <div class="bg-white rounded-lg shadow-sm">
                <button type="button" data-action="click->accordion#toggle" data-target="category-content" class="w-full flex justify-between items-center p-4 text-left font-semibold text-gray-800 hover:bg-gray-50">
                    <span class="text-2xl font-bold text-gray-700">Browse by Category</span>
                    <svg class="h-5 w-5 text-gray-500 transform transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
                </button>
                <div id="category-content" class="hidden p-4 border-t border-gray-200">
                    <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
                    </div>
                </div>
            </div>
        </section>

    </div>

