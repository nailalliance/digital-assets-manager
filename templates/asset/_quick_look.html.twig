{% import '_macros/file_size.html.twig' as fileSizeMacro %}

<div class="relative bg-white w-full max-w-4xl max-h-full overflow-hidden flex flex-col md:flex-row">
    <button data-action="click->quick-look#close" class="absolute top-2 right-2 z-10 bg-white rounded-rull p-1 text-gray-600 hover:text-gray-900">
        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
    </button>
    {# Asset Preview #}
    <div class="w-full md:w-2/3 bg-gray-200 flex items-center justify-center p-4">
        {% if asset.thumbnailPath is not null and asset.thumbnailPath is not empty %}
            {% if asset.mimeType starts with 'video/' %}
                <video controls class="w-full h-full object-contain" poster{{ path('asset_thumbnail', {filename: asset.thumbnailPath|basename}) }}>
                    <source src="{{ path('asset_stream', {id: asset.id}) }}" type="{{ asset.mimeType }}">
                    Your browser does not support the video tag.
                </video>
            {% else %}
                <img src="{{ path('asset_thumbnail', {filename: asset.thumbnailPath|basename}) }}"
                     alt="Thumbnail for {{ asset.name }}" class="object-contain max-w-full max-h-[70vh]">
            {% endif %}
        {% else %}
            <svg class="w-24 h-24 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14"></path>
            </svg>
        {% endif %}
    </div>

    {# Metadata and Actions #}
    <div class="w-full md:w-1/3 p-6 flex flex-col">
        <h2 class="text-2x1 font-bold text-gray-900 mb-2">{{ asset.name }}</h2>
        <p class="text-sm text-gray-500 mb-4 font-mono">{{ asset.itemCodes ? asset.itemCodes | map(item => item.code) | join(', ') }}</p>

        <div class="flex flex-col space-y-3 mb-6">
            <a href="{{ path('asset_download', {id: asset.id}) }}" data-turbo="false"
               class="inline-flex items-center justify-center px-4 py-3 border border-transparent text-base font-medium rounded-md text-white bg-violet-600 hover:bg-violet-700">
                Download Original
            </a>
            <form data-turbo="false" action="{{ path('download_list_add', {id: asset.id}) }}" method="post">
                <button
                    class="w-full inline-flex items-center justify-center px-4 py-3 border-gray-300 text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                    Add to Bag
                </button>
            </form>
        </div>

        <div class="mt-auto text-sm">
            <a data-turbo="false" href="{{ path('app_asset', {id: asset.id}) }}" class="font-medium text-violet-600 hover:text-violet-800">
                View Full Details &rarr;
            </a>
        </div>
    </div>
</div>
