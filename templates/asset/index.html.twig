{% extends 'base.html.twig' %}

{% import '_macros/file_size.html.twig' as fileSizeMacro %}

{# The title will dynamically show the asset's name #}
{% block title %}{{ asset.name }} | {{ parent() }}{% endblock %}

{% block body %}
    <div class="bg-white rounded-lg shadow-xl overflow-hidden">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-0">

            {# Left Column: Asset Preview #}
            <div class="lg:col-span-2 p-8 flex flex-col items-center justify-center bg-gray-200">
                {# This div now displays the thumbnail if it exists #}
                <div class="w-full max-w-2xl aspect-square bg-gray-300 flex items-center justify-center rounded-lg">
                    {% if asset.thumbnailPath is not null and asset.thumbnailPath is not empty %}
                        <img src="{{ path('asset_thumbnail', {filename: asset.thumbnailPath|basename}) }}" alt="Thumbnail for {{ asset.name }}" class="object-contain w-full h-full">
                    {% else %}
                        <svg class="w-24 h-24 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14"></path></svg>
                    {% endif %}
                </div>
            </div>

            {# Right Column: Metadata and Actions #}
            <div class="p-8 flex flex-col">
                {# Asset Name #}
                <h1 class="text-3xl font-bold text-gray-900 mb-2">{{ asset.name }}</h1>

                {# Item Code #}
                <p class="text-sm text-gray-500 mb-6 font-mono">{{ asset.itemCodes ? asset.itemCodes | map(item => item.code) | join(', ') }}</p>

                {# Color Space Highlight #}
                {% if asset.colorSpace.value == 'cmyk' %}
                    <div class="mb-6 p-4 bg-yellow-100 border-l-4 border-yellow-500 text-yellow-700">
                        <p class="font-bold">Print Only</p>
                        <p>This file uses a CMYK color profile and is intended for professional printing.</p>
                    </div>
                {% elseif asset.colorSpace.value == 'rgb' %}
                    <div class="mb-6 p-3 bg-gray-100 rounded-md text-sm text-gray-600">
                        <p><span class="font-semibold">Screen/Web Use:</span> This file uses an RGB color profile.</p>
                    </div>
                {% endif %}

                {# --- START: Version Toggle Links --- #}
                {% set parent = asset.parent ?? asset %}
                {% set editableChild = parent.children|filter(c => c.assetVersionTypeEnum and c.assetVersionTypeEnum.value == 'editable')|first %}
                {% set cmykChild = parent.children|filter(c => c.assetVersionTypeEnum and c.assetVersionTypeEnum.value == 'cmyk_version')|first %}

                {% if editableChild or cmykChild %}
                    <div class="mb-6 inline-flex">
                        <a href="{{ path('app_asset', {id: parent.id}) }}" class="relative inline-flex items-center rounded-l-md px-3 py-2 text-sm font-semibold ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-10 {{ asset == parent ? 'bg-violet-100 text-violet-700' : 'bg-white text-gray-900' }}">
                            {{ parent.mimeType|split('/')|last|upper }}
                        </a>
                        {% if editableChild %}
                            <a href="{{ path('app_asset', {id: editableChild.id}) }}"
                               class="relative -ml-px inline-flex items-center px-3 py-2 text-sm font-semibold ring-1 ring-inset ring-gray-300 hover:bg-gray-50 {{ cmykChild ? '' : ' rounded-r-md' }} {{ asset == editableChild ? 'bg-violet-100 text-violet-700' : 'bg-white text-gray-900' }}">
                                Editable
                            </a>
                        {% endif %}
                        {% if cmykChild %}
                            <a href="{{ path('app_asset', {id: cmykChild.id}) }}"
                               class="relative -ml-px inline-flex items-center rounded-r-md px-3 py-2 text-sm font-semibold ring-1 ring-inset ring-gray-300 hover:bg-gray-50 {{ asset == cmykChild ? 'bg-violet-100 text-violet-700' : 'bg-white text-gray-900' }}">
                                CMYK
                            </a>
                        {% endif %}
                    </div>
                {% endif %}
                {# --- END: Version Toggle Links --- #}

                {# Action Buttons #}
                <div class="flex flex-col space-y-3 mb-8">
                    <div class="flex items-center space-x-3">
                        <a href="{{ path('asset_download', {id: asset.id}) }}" data-turbo="false" class="flex-1 inline-flex items-center justify-center px-4 py-3 border border-transparent text-base font-medium rounded-md text-white bg-violet-600 hover:bg-violet-700">
                            <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path></svg>
                            Download Original
                        </a>
                        <form action="{{ path('download_list_add', {id: asset.id}) }}" method="post" class="flex-1">
                            <button type="submit" class="w-full inline-flex items-center justify-center px-4 py-3 border border-gray-300 text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                                <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                                Add to Bag
                            </button>
                        </form>
                    </div>
                    {% if is_granted('ROLE_FTP_ADMIN') %}
                        <a href="{{ path('admin_asset_edit', {id: asset.id}) }}" class="w-full inline-flex items-center justify-center px-4 py-3 border border-transparent text-base font-medium rounded-md text-white bg-red-600 hover:bg-red-700">
                            Edit Asset
                        </a>
                    {% endif %}
                </div>

                {# Download for Web Form #}
                {% if asset.mimeType in ['image/jpeg', 'image/png', 'image/webp', 'application/pdf'] %}
                    <div data-controller="accordion" class="mt-6 pt-6 border-t border-gray-200 ">
                        <button data-action="click->accordion#toggle" data-target="web-image-generator"
                                class="w-full inline-flex items-center justify-center px-4 py-3 border border-gray-300 text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                            Generate an image for use in Web or Social&nbsp;Media
                            <svg class="h-5 w-5 transform transition-transform" data-accordion-target="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
                        </button>
                        <div class="pt-6 hidden" id="web-image-generator" data-accordion-target="content">
                            <div class="bg-gray-50 border border-gray-200 rounded-lg p-4">
                                <h3 class="text-base font-semibold text-gray-800 mb-4">Generate Image for Web or SM</h3>

                                {# Styled experimental PDF warning #}
                                {% if asset.mimeType == 'application/pdf' %}
                                    <div class="mb-4 rounded-md bg-orange-50 p-3">
                                        <div class="flex items-start">
                                            <div class="flex-shrink-0">
                                                <svg class="h-5 w-5 text-orange-400" xmlns="http://www.w3.org/2000/svg"
                                                     viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                                    <path fill-rule="evenodd"
                                                          d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 3.001-1.742 3.001H4.42c-1.53 0-2.493-1.667-1.743-3.001l5.58-9.92zM10 13a1 1 0 110-2 1 1 0 010 2zm-1.75-4.5a1.75 1.75 0 00-3.5 0v.25a1.75 1.75 0 003.5 0v-.25z"
                                                          clip-rule="evenodd"/>
                                                </svg>
                                            </div>
                                            <div class="ml-3">
                                                <p class="text-sm font-medium text-orange-800">This function is
                                                    experimental for PDFs and may not capture all content correctly.</p>
                                            </div>
                                        </div>
                                    </div>
                                {% endif %}

                                {% form_theme webDownloadForm 'tailwind_form_theme.html.twig' %}
                                {{ form_start(webDownloadForm, {'method': 'GET', 'attr': {'data-turbo': 'false'}}) }}
                                <div class="space-y-4">
                                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                                        <div>{{ form_row(webDownloadForm.size) }}</div>
                                        <div>{{ form_row(webDownloadForm.padding) }}</div>
                                        <div>{{ form_row(webDownloadForm.format) }}</div>
                                    </div>
                                    <div>
                                        <button type="submit"
                                                class="w-full inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700">
                                            Download Image for Web
                                        </button>
                                    </div>
                                </div>
                                {{ form_end(webDownloadForm) }}
                            </div>
                        </div>
                    </div>
                {% endif %}

                {# Description #}
                <div class="mt-8 pt-6 border-t border-gray-200">
                    <h3 class="text-sm font-bold text-gray-500 uppercase tracking-wider mb-2">Description</h3>
                    <p class="text-gray-700 leading-relaxed">
                        {{ asset.description|default('No description available.') }}
                    </p>
                </div>

                {# Metadata Details Table #}
                <div class="mt-8 pt-6 border-t border-gray-200">
                    <h3 class="text-sm font-bold text-gray-500 uppercase tracking-wider mb-3">Details</h3>
                    <dl class="space-y-3">
                        <div class="flex justify-between">
                            <dt class="text-sm font-medium text-gray-600">Color Space</dt>
                            <dd class="text-sm text-gray-800">{{ asset.colorSpace.value | upper }}</dd>
                        </div>
                        <div class="flex justify-between">
                            <dt class="text-sm font-medium text-gray-600">File Type</dt>
                            <dd class="text-sm text-gray-800">{{ asset.mimeType }}</dd>
                        </div>
                        <div class="flex justify-between">
                            <dt class="text-sm font-medium text-gray-600">File Size</dt>
                            <dd class="text-sm text-gray-800">{{ fileSizeMacro.format(asset.fileSize) }}</dd>
                        </div>
                        {% if asset.embargoDate %}
                            <div class="flex justify-between">
                                <dt class="text-sm font-medium text-yellow-600">Embargo Date</dt>
                                <dd class="text-sm text-yellow-800">{{ asset.embargoDate|date('M d, Y') }}</dd>
                            </div>
                        {% endif %}
                        {% if asset.expirationDate %}
                            <div class="flex justify-between">
                                <dt class="text-sm font-medium text-red-600">Expiration Date</dt>
                                <dd class="text-sm text-red-800">{{ asset.expirationDate|date('M d, Y') }}</dd>
                            </div>
                        {% endif %}
                    </dl>
                </div>

                {# Categories & Tags #}
                <div class="mt-8 pt-6 border-t border-gray-200">
                    {# Brands #}
                    <div class="mb-4">
                        <h4 class="text-sm font-bold text-gray-500 uppercase tracking-wider mb-2">Brands</h4>
                        <div class="flex flex-wrap gap-2">
                            {% for brand in asset.brand %}
                                <span class="px-2 py-1 text-xs font-semibold text-violet-800 bg-violet-100 rounded-full">
                                    {{ brand.name }}
                                </span>
                            {% endfor %}
                        </div>
                    </div>

                    {# Categories #}
                    <div class="mb-4">
                        <h4 class="text-sm font-bold text-gray-500 uppercase tracking-wider mb-2">Categories</h4>
                        <div class="flex flex-wrap gap-2">
                            {% for category in asset.categories %}
                                <span class="px-2 py-1 text-xs font-semibold text-violet-800 bg-violet-100 rounded-full">
                                    {{ category.name }}
                                </span>
                            {% endfor %}
                        </div>
                    </div>
                    {# Tags #}
                    <div>
                        <h4 class="text-sm font-bold text-gray-500 uppercase tracking-wider mb-2">Tags</h4>
                        <div class="flex flex-wrap gap-2">
                            {% for tag in asset.tags %}
                                <span class="px-2 py-1 text-xs font-semibold text-gray-800 bg-gray-200 rounded-full">
                                    {{ tag.name }}
                                </span>
                            {% endfor %}
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}

