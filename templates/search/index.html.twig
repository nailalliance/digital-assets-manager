{% extends 'base.html.twig' %}

{% block title %}
    {% if query is defined and query is not empty %}
        Search Results for "{{ query }}"
    {% else %}
        Browse Assets
    {% endif %}
    | {{ parent() }}
{% endblock %}

{% block body %}
    <div class="flex flex-col md:flex-row gap-8">

        {# Filter Sidebar #}
        <aside class="w-full md:w-1/4 lg:w-1/5">
            <h2 class="text-xl font-bold mb-4">Filters</h2>
            <form>
                {# Collections Filter #}
                <div class="mb-6">
                    <h3 class="font-semibold mb-2">Collections</h3>
                    <ul class="space-y-1">
                        <li><a href="#" class="text-gray-700 hover:text-violet-600 hover:font-semibold">Fall Collection 2025</a></li>
                        <li><a href="#" class="text-violet-600 font-bold">Spring Collection 2025</a></li>
                        <li><a href="#" class="text-gray-700 hover:text-violet-600 hover:font-semibold">Holiday 2024</a></li>
                    </ul>
                </div>
                {# Categories Filter #}
                <div class="mb-6">
                    <h3 class="font-semibold mb-2">Categories</h3>
                    <ul class="space-y-1">
                        <li><a href="#" class="text-gray-700 hover:text-violet-600 hover:font-semibold">Logos</a></li>
                        <li class="pl-4"><a href="#" class="text-gray-600 hover:text-violet-600">&raquo; Primary Logos</a></li>
                        <li class="pl-4"><a href="#" class="text-gray-600 hover:text-violet-600">&raquo; Secondary Logos</a></li>
                        <li><a href="#" class="text-violet-600 font-bold">Product Shots</a></li>
                        <li><a href="#" class="text-gray-700 hover:text-violet-600 hover:font-semibold">Social Media</a></li>
                    </ul>
                </div>

                {# Brands Filter #}
                <div class="mb-6">
                    <h3 class="font-semibold mb-2">Brands</h3>
                    <ul class="space-y-2">
                        <li><label class="flex items-center"><input type="checkbox" class="h-4 w-4 rounded border-gray-300 text-violet-600 focus:ring-violet-500 mr-2"> Brand A</label></li>
                        <li><label class="flex items-center"><input type="checkbox" class="h-4 w-4 rounded border-gray-300 text-violet-600 focus:ring-violet-500 mr-2" checked> Brand B</label></li>
                        <li><label class="flex items-center"><input type="checkbox" class="h-4 w-4 rounded border-gray-300 text-violet-600 focus:ring-violet-500 mr-2"> Brand C</label></li>
                    </ul>
                </div>

                {# Special Toggles for Designers/Admins #}
                {% if is_granted('ROLE_DESIGNER') %}
                    <div class="mb-6 p-3 bg-gray-200 rounded-md">
                        <h3 class="font-semibold mb-2">Designer Options</h3>
                        <label class="flex items-center cursor-pointer">
                            <div class="relative">
                                <input type="checkbox" class="sr-only peer">
                                <div class="w-10 h-4 bg-gray-400 rounded-full shadow-inner"></div>
                                <div class="dot absolute w-6 h-6 bg-white rounded-full shadow -left-1 -top-1 transition peer-checked:translate-x-full peer-checked:bg-violet-600"></div>
                            </div>
                            <div class="ml-3 text-gray-700 font-medium">
                                Show Expired
                            </div>
                        </label>
                    </div>
                {% endif %}

                {% if is_granted('ROLE_ADMIN') %}
                    <div class="mb-6 p-3 bg-red-100 rounded-md">
                        <h3 class="font-semibold mb-2 text-red-800">Admin Options</h3>
                        <label class="flex items-center cursor-pointer">
                            <div class="relative">
                                <input type="checkbox" class="sr-only peer">
                                <div class="w-10 h-4 bg-gray-400 rounded-full shadow-inner"></div>
                                <div class="dot absolute w-6 h-6 bg-white rounded-full shadow -left-1 -top-1 transition peer-checked:translate-x-full peer-checked:bg-red-600"></div>
                            </div>
                            <div class="ml-3 text-gray-700 font-medium">
                                Show Inactive
                            </div>
                        </label>
                    </div>
                {% endif %}

            </form>
        </aside>

        {# Main Content - Asset Grid #}
        <main class="w-full md:w-3/4 lg:w-4/5">
            <div class="flex justify-between items-center mb-4">
                <h1 class="text-3xl font-bold">
                    {% if query is defined and query is not empty %}
                        Results for "{{ query }}"
                    {% else %}
                        Product Shots
                    {% endif %}
                </h1>
                <span class="text-gray-600">{{ assets|length }} items</span>
            </div>

            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                {% if assets is not empty %}
                    {% for asset in assets %}
                        <div class="bg-white rounded-lg shadow-sm overflow-hidden group relative">
                            <div class="aspect-square w-full bg-gray-200 flex items-center justify-center">
                                {# Placeholder for the asset thumbnail #}
                                <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14"></path></svg>
                            </div>
                            <div class="p-3">
                                <p class="font-semibold text-sm truncate" title="{{ asset.name }}">{{ asset.name }}</p>
                                <p class="text-xs text-gray-500">{{ asset.itemCode }}</p>
                            </div>

                            {# Hover Actions Overlay #}
                            <div class="absolute inset-0 bg-black bg-opacity-50 flex items-center justify-center space-x-3 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                                <button title="Download" class="p-3 bg-white rounded-full text-gray-700 hover:bg-violet-500 hover:text-white transition-colors">
                                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path></svg>
                                </button>
                                <button title="Add to Collection" class="p-3 bg-white rounded-full text-gray-700 hover:bg-violet-500 hover:text-white transition-colors">
                                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                                </button>
                                <a href="#" title="View Details" class="p-3 bg-white rounded-full text-gray-700 hover:bg-violet-500 hover:text-white transition-colors">
                                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path></svg>
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <div class="col-span-full text-center py-12 bg-white rounded-lg shadow-sm">
                        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                            <path vector-effect="non-scaling-stroke" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 13h6m-3-3v6m-9 1V7a2 2 0 012-2h6l2 2h6a2 2 0 012 2v8a2 2 0 01-2 2H5a2 2 0 01-2-2z" />
                        </svg>
                        <h3 class="mt-2 text-sm font-medium text-gray-900">No assets found</h3>
                        <p class="mt-1 text-sm text-gray-500">
                            {% if query is defined and query is not empty %}
                                Try adjusting your search or filter terms.
                            {% else %}
                                There are no assets in this category yet.
                            {% endif %}
                        </p>
                    </div>
                {% endif %}
            </div>
        </main>
    </div>
{% endblock %}
