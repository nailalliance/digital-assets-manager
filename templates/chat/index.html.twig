{% extends 'base.html.twig' %}

{% block title %}AI Chats {{ parent() }}{% endblock %}

{% block body %}
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-900">AI Chats</h1>
    </div>

    {% include 'chat/_warning.html.twig' %}

    <section class="mb-16">
        <h2 class="text-2xl font-bold text-gray-700 mb-4 text-center">Browse by Brand</h2>
        <div class="flex items-center justify-center flex-wrap gap-4">
            {% for brand in parentBrands %}
                <a data-turbo="false" href="{{ path('app_brand_chats', {brandId: brand.id}) }}"
                   class="px-6 py-2 font-semibold rounded-full shadow-sm border transition-colors bg-white text-gray-700 border-gray-200 hover:bg-gray-100">
                    {{ brand.name }}
                </a>
            {% endfor %}
        </div>
    </section>

{% endblock %}
