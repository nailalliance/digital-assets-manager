{% extends 'base.html.twig' %}

{% block title %}Direct Share Upload{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto" data-controller="direct-share">
        <div class="bg-white rounded-lg shadow-xl p-8">
            <h1 class="text-3xl font-bold text-gray-900 mb-2">Direct Share</h1>
            {# <p class="text-gray-600 mb-6">Upload one or more files to generate a temporary, shareable download link.</p> #}
            <p class="text-gray-600 mb-6">Upload one file to generate a temporary, shareable download link.</p>

            <form data-action="submit->direct-share#upload">
                {# Dropzone Area #}
                <div data-direct-share-target="dropzone"
                     data-action="dragover->direct-share#dragover dragleave->direct-share#dragleave drop->direct-share#drop"
                     class="border-2 border-dashed border-gray-300 rounded-lg p-8 text-center cursor-pointer transition-colors">
                    <div class="pointer-events-none">
                        <svg class="w-12 h-12 text-gray-400 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-4-4V7a4 4 0 014-4h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V16a4 4 0 01-4 4H7z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11v6m-3-3h6"></path></svg>
                        <p class="mt-4 text-lg text-gray-600">
                            <span class="font-semibold text-violet-600">Click to upload</span> or drag and drop file
                            {# <span class="font-semibold text-violet-600">Click to upload</span> or drag and drop files #}
                        </p>
                        <p class="mt-1 text-sm text-gray-500" data-direct-share-target="fileList">No files selected</p>
                    </div>
                    <input type="file" class="hidden" data-direct-share-target="fileInput" data-action="change->direct-share#filesSelected" multiple>
                </div>

                {# Progress Bar #}
                <div class="hidden mt-4" data-direct-share-target="progressContainer">
                    <div class="w-full bg-gray-200 rounded-full h-2.5 mb-2">
                        <div class="bg-violet-600 h-2.5 rounded-full" data-direct-share-target="progressBar" style="width: 0%"></div>
                    </div>
                    <p class="text-sm text-center text-gray-600">Uploading...</p>
                </div>

                {# Result Display #}
                <div class="hidden mt-4" data-direct-share-target="resultContainer">
                    <h3 class="text-lg font-medium text-green-800">Link Generated Successfully!</h3>
                    <div class="relative mt-2">
                        <input type="text" readonly data-direct-share-target="urlInput" class="w-full bg-gray-100 border-gray-300 rounded-md p-2 pr-10 text-sm">
                        <button type="button" data-action="click->direct-share#copyToClipboard" class="absolute inset-y-0 right-0 pr-3 flex items-center">
                            <svg class="h-5 w-5 text-gray-500 hover:text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path></svg>
                        </button>
                    </div>
                </div>

                <div class="mt-8 pt-5 border-t border-gray-200 flex justify-end">
                    <button type="submit" data-direct-share-target="submitButton" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-violet-600 hover:bg-violet-700 disabled:bg-gray-400" disabled>
                        Generate Link
                    </button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
