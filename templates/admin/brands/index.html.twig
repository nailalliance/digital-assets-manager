{% extends 'base.html.twig' %}

{% block title %}Brands | {{ parent() }}{% endblock %}

{% block body %}
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Brands</h1>
        <a href="{{ path('admin_brands_new') }}" class="inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-violet-600 hover:bg-violet-700">
            Create new
        </a>
    </div>

    {# Filter Form #}
    <div class="mb-4 bg-white p-4 rounded-lg shadow-sm">
        <form data-controller="filter-form" class="flex items-center space-x-4">
            <label for="parent_brand_filter" class="text-sm font-medium text-gray-700">Filter by Parent Brand:</label>
            <select name="parent_brand" id="parent_brand_filter" class="block w-64 border-gray-300 rounded-md shadow-sm focus:ring-violet-500 focus:border-violet-500 sm:text-sm" data-action="change->filter-form#submit">
                <option value="">All Brands</option>
                {% for brand in all_brands %}
                    <option value="{{ brand.id }}" {{ brand.id == current_parent_filter ? 'selected' : '' }}>{{ brand.name }}</option>
                {% endfor %}
            </select>
            <a href="{{ path('admin_brands_index') }}" class="text-sm text-gray-600 hover:text-violet-600">Clear Filter</a>
        </form>
    </div>

    <div class="bg-white rounded-lg shadow-xl">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
            <tr>
                {# Sortable Name Header #}
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    {% set name_direction = (current_sort == 'name' and current_direction == 'asc') ? 'desc' : 'asc' %}
                    <a href="{{ path('admin_brands_index', {sort: 'name', direction: name_direction, parent_brand: current_parent_filter}) }}" class="flex items-center">
                        Name
                        {% if current_sort == 'name' %}
                            <span class="ml-2">{% if current_direction == 'asc' %}▲{% else %}▼{% endif %}</span>
                        {% endif %}
                    </a>
                </th>

                {# Sortable Parent Brand Header #}
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    {% set parent_direction = (current_sort == 'parentName' and current_direction == 'asc') ? 'desc' : 'asc' %}
                    <a href="{{ path('admin_brands_index', {sort: 'parentName', direction: parent_direction, parent_brand: current_parent_filter}) }}" class="flex items-center">
                        Parent Brand
                        {% if current_sort == 'parentName' %}
                            <span class="ml-2">{% if current_direction == 'asc' %}▲{% else %}▼{% endif %}</span>
                        {% endif %}
                    </a>
                </th>
                <th scope="col" class="relative px-6 py-3">Assets</th>
                <th scope="col" class="relative px-6 py-3">Status</th>
                <th scope="col" class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
            </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
            {% for brand in brands %}
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap font-medium text-gray-900">{{ brand.name }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-gray-500">{{ brand.brands ? brand.brands.name : 'N/A' }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium space-x-4">{{ brand.assets ? (brand.assets | length) : 'N/A' }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium space-x-4">
                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full
                            {{ brand.status ? 'bg-green-100 text-green-800' : '' }}
                            {{ brand.status == false ? 'bg-gray-100 text-gray-800' : '' }}">
                            {{ brand.status ? 'Active' : 'Inactive' }}
                        </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-4">
                        <a href="{{ path('admin_brands_edit', {'id': brand.id}) }}" class="text-indigo-600 hover:text-indigo-900">Edit</a>
                        {{ include('admin/brands/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="px-6 py-4 text-center text-gray-500">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
