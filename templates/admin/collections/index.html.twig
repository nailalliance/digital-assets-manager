{% extends 'base.html.twig' %}

{% block title %}Collections | {{ parent() }}{% endblock %}

{% block body %}
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Collections</h1>
        <a href="{{ path('admin_collections_new') }}" class="inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-violet-600 hover:bg-violet-700">
            Create new
        </a>
    </div>

    <div class="bg-white rounded-lg shadow-xl">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
            <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Year</th>
                <th scope="col" class="relative px-6 py-3">Assets</th>
                <th scope="col" class="relative px-6 py-3">Status</th>
                <th scope="col" class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
            </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
            {% for collection in collections %}
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap font-medium text-gray-900">{{ collection.name }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-gray-500">{{ collection.year }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium space-x-4">{{ collection.assets ? (collection.assets | length) : 'N/A' }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium space-x-4">
                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full
                            {{ collection.status ? 'bg-green-100 text-green-800' : '' }}
                            {{ collection.status == false ? 'bg-gray-100 text-gray-800' : '' }}">
                            {{ collection.status ? 'Active' : 'Inactive' }}
                        </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-4">
                        <a href="{{ path('admin_collections_edit', {'id': collection.id}) }}" class="text-indigo-600 hover:text-indigo-900">Edit</a>
                        {{ include('admin/collections/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="px-6 py-4 text-center text-gray-500">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
