<form method="post" action="{{ path('admin_sm_posts_delete', {'id': post.id}) }}" onsubmit="return confirm('Are you sure you want to delete this post?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
    <button class="text-red-600 hover:text-red-800 text-sm font-medium">Delete Post</button>
</form>
