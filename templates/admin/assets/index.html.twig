{% extends 'base.html.twig' %}

{% block title %}Manage Assets{% endblock %}

{% block body %}
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3x1 font-bold text-gray-900">Manage Assets</h1>
        <a href="{{ path('app_asset_upload') }}"
           class="inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-violet-600 hover:bg-violet-700">
            Upload New Asset
        </a>
    </div>

    <div class="bg-white rounded-lg shadow-xl p-6">
        <form action="{{ path('admin_assets_index') }}" class="mb-6" method="get" data-controller="filter-form">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-4">
                <div class="lg:col-span-2">
                    <input type="search" name="q" value="{{ currentFilters.q | default('') }}" class="w-full border-gray-300 rounded-md shadow-sm" placeholder="Search by name or item code...">
                </div>
                <select name="brand" data-action="change->filter-form#submit" class="border-gray-300 rounded-md shadow-sm">
                    <option value="0">All Brands</option>
                    {% for brand in brands %}
                        <option value="{{ brand.id }}" {{ currentFilters.brand | default('') == brand.id ? 'selected' }}>{{ brand.name }}</option>
                    {% endfor %}
                </select>
                <select name="category" data-action="change->filter-form#submit" class="border-gray-300 rounded-md shadow-sm">
                    <option value="0">All Categories</option>
                    {% for category in categories %}
                        <option value="{{ category.id }}" {{ currentFilters.category|default('') == category.id ? 'selected' }}>{{ category.name }}</option>
                    {% endfor %}
                </select>
                <select name="collection" data-action="change->filter-form#submit" class="border-gray-300 rounded-md shadow-sm">
                    <option value="0">All Collections</option>
                    {% for collection in collections %}
                        <option value="{{ collection.id }}" {{ currentFilters.collection|default('') == collection.id ? 'selected' }}>
                            ({{ collection.year }}) {{ collection.name }}
                        </option>
                    {% endfor %}
                </select>
                <select name="status" data-action="change->filter-form#submit" class="border-gray-300 rounded-md shadow-sm">
                    <option value="">All Statuses</option>
                    {% for status in statuses %}
                        <option value="{{ status.value }}" {{ currentFilters.status|default('') == status.value ? 'selected' }}>{{ status.value|capitalize }}</option>
                    {% endfor %}
                </select>
                <div class="lg:col-span-2 flex items-center space-x-2">
                    <button type="submit" class="w-full inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-violet-600 hover:bg-violet-700">Search</button>
                    <a href="{{ path('admin_assets_index') }}" class="w-full text-center py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">Clear</a>
                </div>
            </div>
        </form>

        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Thumbnail</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Name & Codes</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Brands</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Categories</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Collections</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
                    <th class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
                </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                {% for asset in assets %}
                    <tr>
                        <td class="px-6 py-4">
                            {% if asset.thumbnailPath %}
                                <img src="{{ path('asset_thumbnail', {filename: asset.thumbnailPath|basename}) }}" class="w-16 h-16 object-cover rounded-md bg-gray-200">
                            {% endif %}
                        </td>
                        <td class="px-6 py-4">
                            <div class="font-medium text-gray-900">{{ asset.name }}</div>
                            <div class="text-xs text-gray-500">{{ asset.itemCodes|map(ic => ic.code)|join(', ') }}</div>
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-500">{{ asset.brand|map(b => b.name)|join(', ') }}</td>
                        <td class="px-6 py-4 text-sm text-gray-500">{{ asset.categories|map(c => c.name)|join(', ') }}</td>
                        <td class="px-6 py-4 text-sm text-gray-500">{{ asset.collections|map(c => c.name)|join(', ') }}</td>
                        <td class="px-6 py-4">
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full
                                    {{ asset.status.value == 'active' ? 'bg-green-100 text-green-800' : '' }}
                                    {{ asset.status.value == 'inactive' ? 'bg-gray-100 text-gray-800' : '' }}
                                    {{ asset.status.value == 'expired' ? 'bg-red-100 text-red-800' : '' }}">
                                    {{ asset.status.value|capitalize }}
                                </span>
                        </td>
                        <td class="px-6 py-4 text-right text-sm font-medium">
                            <a href="{{ path('admin_asset_edit', {'id': asset.id}) }}" class="text-indigo-600 hover:text-indigo-900">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7" class="px-6 py-12 text-center text-gray-500">No assets found.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        {# Pagination Controls #}
        <div class="p-4 border-t border-gray-200 flex justify-between items-center">
            <div>
                {% if previous >= 0 %}
                    <a href="{{ path('admin_assets_index', app.request.query.all|merge({offset: previous})) }}" class="text-sm font-medium text-gray-600 hover:text-violet-600">&laquo; Previous</a>
                {% endif %}
            </div>
            <div class="text-sm text-gray-500">
                Showing {{ offset + 1 }} to {{ offset + assets|length }} of {{ total }} results
            </div>
            <div>
                {% if next < total %}
                    <a href="{{ path('admin_assets_index', app.request.query.all|merge({offset: next})) }}" class="text-sm font-medium text-gray-600 hover:text-violet-600">Next &raquo;</a>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
