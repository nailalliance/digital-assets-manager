{% extends 'base.html.twig' %}

{% block title %}My Boards{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-2xl font-bold text-gray-900">My Boards</h1>
            <a href="{{ path('app_boards_new') }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                Create New Board
            </a>
        </div>

        <div class="bg-white shadow overflow-hidden sm:rounded-md">
            <ul role="list" class="divide-y divide-gray-200">
                {% for board in boards %}
                    <li>
                        <a href="{{ path('app_boards_show', {'id': board.id}) }}" class="block hover:bg-gray-50">
                            <div class="px-4 py-4 sm:px-6">
                                <div class="flex items-center justify-between">
                                    <p class="text-sm font-medium text-indigo-600 truncate">{{ board.name }}</p>
                                    <div class="ml-2 flex-shrink-0 flex">
                                        {# Add badges or other info here if needed #}
                                    </div>
                                </div>
                                <div class="mt-2 sm:flex sm:justify-between">
                                    <div class="sm:flex">
                                        <p class="flex items-center text-sm text-gray-500">
                                            Owned by: {{ board.owner.name }}
                                        </p>
                                    </div>
                                    <div class="mt-2 flex items-center text-sm text-gray-500 sm:mt-0">
                                        <p>
                                            Last updated {{ board.updatedAt|date('M d, Y') }}
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </li>
                {% else %}
                    <li class="px-4 py-4 sm:px-6">
                        <p class="text-sm text-gray-500">No boards found. <a href="{{ path('app_boards_new') }}" class="text-indigo-600 hover:underline">Create one now</a>.</p>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}
